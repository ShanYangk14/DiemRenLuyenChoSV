@model PMQLSV.Models.Teacher

@{
    ViewData["Title"] = "TeacherPage";
}

<style>
    /* Container styling */
    .container {
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    /* Title styling */
    h1 {
        color: #343a40;
        margin-bottom: 20px;
        text-align: center;
    }

    /* Information styling */
    .teacher-info {
        margin-bottom: 30px;
    }

        .teacher-info h4 {
            color: #007bff;
            margin-bottom: 10px;
            text-align: center;
        }

        .teacher-info hr {
            border-top: 2px solid #007bff;
            margin-top: 5px;
        }

    /* Definition list styling */
    .row {
        display: flex;
        flex-wrap: wrap;
        margin-left: -15px;
        margin-right: -15px;
    }

    .col-sm-2,
    .col-sm-10 {
        flex: 0 0 50%;
        max-width: 50%;
        padding-left: 15px;
        padding-right: 15px;
    }

    .col-sm-2 {
        font-weight: bold;
        color: #6c757d;
    }

    /* Display name styling */
    .display-name {
        color: #007bff;
        font-weight: bold;
    }

    /* Email styling */
    .email {
        color: #28a745;
        font-style: italic;
    }
</style>

<div class="container">
    <h1>Teacher Page</h1>

    <div class="teacher-info">
        <h4>Teacher Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Full Name
            </dt>
            <dd class="col-sm-10">
                @Html.Partial("_FullName", Model.User)
            </dd>
            <dt class="col-sm-2 display-name">
                Email
            </dt>
            <dd class="col-sm-10 email">
                @Html.DisplayFor(model => model.User.Email)
            </dd>
            <dt class="col-sm-2 display-name">
                Teacher ID
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.User.Id)
            </dd>
            <dt class="col-sm-2 display-name">
                Classes
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Classes)
            </dd>
        </dl>
    </div>
</div>
