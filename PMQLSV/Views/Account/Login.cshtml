@model PMQLSV.Models.User

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Custom CSS for login form */

    .card {
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header {
        background-color: #4caf50; /* Green */
        color: #fff;
        border-top-left-radius: 10px;
        border-top-right-radius: 10px;
    }

    .card-body {
        padding: 20px;
    }

    .form-group {
        margin-bottom: 20px;
    }

    label {
        font-weight: bold;
    }

    .form-control {
        border: 1px solid #ced4da;
        border-radius: 5px;
        padding: 10px;
    }

    .btn-primary {
        background-color: #4caf50; /* Green */
        border: none;
    }

        .btn-primary:hover {
            background-color: #45a049; /* Darker green */
        }

    .text-dark {
        color: #343a40;
    }
</style>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Login</h5>
                </div>
                <div class="card-body">
                    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "needs-validation", novalidate = "true" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(m => m.Email, new { @class = "font-weight-bold" })
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter your email", required = "true" })
                            <div class="invalid-feedback">Please enter a valid email address.</div>
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password, new { @class = "font-weight-bold" })
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter your password", required = "true" })
                            <div class="invalid-feedback">Please enter your password.</div>
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-primary btn-block">Login</button>
                        </div>
                    }
                </div>
                <div class="card-footer">
                    <div class="text-center">
                        <a href="@Url.Action("ForgotPassword", "Account")" class="text-secondary">Forgot Password?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
