@model PMQLSV.Models.Student

@{
    ViewData["Title"] = "StudentPage";
}

<div class="student-info-container">
    <h4 class="info-heading">Student Information</h4>
    <hr class="info-divider" />
    <dl class="row student-info-list">
        <dt class="info-label col-sm-2">
            Full Name
        </dt>
        <dd class="info-value col-sm-10">
            @Html.Partial("_FullName", Model.User)
        </dd>
        <dt class="info-label col-sm-2">
            Email
        </dt>
        <dd class="info-value col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="info-label col-sm-2">
            Class
        </dt>
        <dd class="info-value col-sm-10">
            @Html.DisplayFor(model => model.Class.ClassName)
        </dd>
        <dt class="info-label col-sm-2">
            Major
        </dt>
        <dd class="info-value col-sm-10">
            @Html.DisplayFor(model => model.Major)
        </dd>
        <dt class="info-label col-sm-2">
            Teacher
        </dt>
        <dd class="info-value col-sm-10">
            @{
                var teacherUser = Model.Class?.Teacher?.User;
                var teacherName = teacherUser != null ? $"{teacherUser.FirstName} {teacherUser.LastName}" : "No teacher assigned to this class";
            }
            @Html.Partial("_FullName", teacherUser)
        </dd>
    </dl>
</div>

<style>
    body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
    }

    .page-title {
        font-size: 28px;
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    .student-info-container {
        background-color: #fff;
        padding: 20px;
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.1);
        max-width: 600px;
        margin: 0 auto;
    }

    .info-heading {
        font-size: 24px;
        color: #007bff;
        margin-bottom: 15px;
        text-align: center;
    }

    .info-divider {
        border-top: 2px solid #007bff;
        margin-bottom: 20px;
    }

    .student-info-list {
        list-style: none;
        padding-left: 0;
    }

    .info-label {
        font-weight: bold;
        margin-bottom: 8px;
        color: #555;
    }

    .info-value {
        margin-bottom: 15px;
        color: #333;
    }
</style>
