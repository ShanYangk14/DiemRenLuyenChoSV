@model PMQLSV.Models.Student

@{
    ViewData["Title"] = "StudentPage";
}

<h1>StudentPage</h1>

<div>
    <h4>Student Information</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Full Name
        </dt>
        <dd class="col-sm-10">
            @Html.Partial("_FullName", Model.User)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.User)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.User.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Class)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Class.ClassName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Major)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Major)
        </dd>
        <dt class="col-sm-2">
            Teacher
        </dt>
        <dd class="col-sm-10">
            @{
                var teacherUser = Model.Class?.Teacher?.User;
                var teacherName = teacherUser != null ? $"{teacherUser.FirstName} {teacherUser.LastName}" : "No teacher assigned to this class";
            }
            @Html.Partial("_FullName", teacherUser)
        </dd>
    </dl>
</div>
